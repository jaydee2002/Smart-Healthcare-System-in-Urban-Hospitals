{
  "name": "backend",
  "version": "1.0.0",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "test": "jest --runInBand",
    "test:all": "jest --runInBand --coverage",
    "test:doctor": "jest --runInBand tests/controllers/doctorController.test.js --coverage",
    "test:patient": "jest --runInBand tests/controllers/patientController.test.js --coverage",
    "test:appointment": "jest --runInBand tests/controllers/appointmentController.test.js --coverage",
    "test:report": "jest --runInBand tests/controllers/reportController.test.js --coverage --collectCoverageFrom=src/controllers/reportController.js"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": { "^.+\\.jsx?$": "babel-jest" },
    "roots": ["<rootDir>/tests"],
    "resetMocks": true,
    "restoreMocks": true,
    "clearMocks": true,

    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/controllers/**/*.js",     
      "!src/controllers/**/__mocks__/**",
      "!src/**/index.js"
    ],
    "coverageReporters": ["text", "lcov"],

    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 75,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1",
    "multer": "^2.0.2",
    "qrcode": "^1.5.4",
    "stripe": "^19.1.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "babel-jest": "^30.2.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10"
  }
}
